{
  "conventionalCommits.scopes": [
    "ui",
    "bug",
    "conflict",
    "enhance",
    "feature",
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    "source.addMissingImports": "always", // Add missing imports
    "source.fixAll.eslint": "always",  // Fix ESLint errors
    "source.organizeImports": "always",    // Sort imports
  },
  "eslint.ignoreUntitled": true,
  "eslint.validate": ["javascript", "javascriptreact"], // Add other languages if needed
  "eslint.format.enable": true,
  "eslint.run": "onSave",
  "editor.formatOnSave": true,
  "eslint.debug": true,
  "editor.formatOnPaste": true,
  "editor.inlineSuggest.enabled": true,
  "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "css.lint.emptyRules": "error",  
  "files.eol": "\n", // Use LF line endings (recommended)
}
